  <%= stylesheet_link_tag "hudson.css", :plugin => "redmine_hudson", :media => "screen" %>
  <%= javascript_include_tag 'jquery.health_report_setting_appender.js', :plugin => "redmine_hudson" %>
  <%= javascript_include_tag 'jquery.display_switcher.js', :plugin => "redmine_hudson" %>
  <%= javascript_include_tag 'jquery.job_settings_field_controller.js', :plugin => "redmine_hudson" %>
